---
import Layout from '@/layouts/Layout.astro';
import { FaChevronLeft } from 'react-icons/fa';
---

<Layout title='Thank You for Your Order!'>
  <main class='min-h-screen py-20 container mx-auto'>
    <h1 class='text-4xl mt-10'>Thank You for Your Order!</h1>
    <p>We appreciate your business and will process your order as soon as possible.</p>
    <button class='btn mt-10 flex items-center gap-2' onclick='window.history.back()'>
      <FaChevronLeft /> Back to Home</button
    >
  </main>
</Layout>
